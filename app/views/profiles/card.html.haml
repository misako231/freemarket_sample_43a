= render 'shared/header'
%nav.bread-crumbs
  %ul.bread-crumbs__items
    %li.bread-crumbs__items__value{itemscope: "", itemtype: ""}
      = link_to "" , class: "bread-crumbs__items__value__link" do
        %span{itemprop: "title"}
          - breadcrumb :card_profiles
      %li.bread-crumbs__items__value{itemscope: "", itemtype: ""}
        %span{itemprop: "title"}
          = breadcrumbs separator: " #{content_tag(:i, '', class: 'fa fa-angle-right')} "


%main.card
  = render 'shared/mypage-side-nav'
  .card__content
    .card__content__top
      支払い方法
    .card__content__middle
      .card__content__middle__text
        クレジットカード一覧
      .card__content__middle__btn
        .card__content__middle__btn__text
          %i.far.fa-credit-card
          = link_to add_credit_user_profiles_path do
            クレジットカードを登録する
      .card__content__middle__bottom
        = link_to "#", target: "blank", class: "card__content__middle__bottom__link" do
          %span 支払い方法について
